<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginVertical="5dp"
    android:orientation="horizontal"
    android:background="@drawable/bg_dark">


    <TextView
        android:id="@+id/tv_task"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="10dp"
        android:gravity="center_vertical"
        android:layout_weight="1"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="@string/custom_text"
        android:textColor="@color/grey_suit_500"
        android:textSize="20sp" />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_category"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginEnd="5dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bg_task_personal"
            android:gravity="center"
            android:text="@string/personal"
            android:textColor="@color/sea_green_700"/>

        <androidx.constraintlayout.utils.widget.ImageFilterButton
            android:id="@+id/fb_star"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="5dp"
            android:layout_gravity="center_vertical"
            android:background="@color/transparent"
            android:src="@drawable/ic_baseline_star_border_24"/>

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:text="@string/custom_time"
            android:textColor="@color/grey_suit_500"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>



</androidx.appcompat.widget.LinearLayoutCompat>